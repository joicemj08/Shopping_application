<div id="error"></div>
<%= form_for(@offer) do |f| %>

  <%= f.label :Product_name %><br>
  <%= f.collection_select(:product_id, Product.all, :id, :name) %><br>

  <%= f.label :Description %><br>
  <%= f.text_area :description, :class => "tinymce", :rows => 4, :cols => 12 %><br>

  <%= tinymce %>
  <strong>Add offer image</strong><br>
  <%= f.file_field :avatar %><br>

  <%=f.submit :OnClick =>'validateForm()' %>

<% end %>

 <script>
function validateForm(){
    var offer = $('#offer_avatar').val();
    flag = 0;
    $("#error").html (' ');
    if (offer.length == "" ){
      $("#error").append("<br>* Image is mandatory ");
      flag = 1;
    }
    if (flag == 0)
      $("#new_offer").submit();


  }
</script>