<table class="table">
      <tr>

        <th>PRODUCT NAME</th>
        <th>CATEGORY NAME</th>
        <th>UNIT PRICE</th>
        <th>QUANTITY</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
       <% @products.each do |product| %>
      <tr>

        <td><%= product.name %></td>
        <td><%= link_to product.category.name, category_path(product.category_id) %></td>
          <!-- <td><%= product.name %></td> -->
        <td><%= product.unit_price %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Show', product_path(product) %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product_path(product),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
