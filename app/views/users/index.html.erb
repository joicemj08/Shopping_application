<div class="row" style = "text-align: center;" >
<h2>USERS</h2>
</div>
<p>
  <%= link_to 'ADD USER', new_user_path, :class=>'btn btn-success'%>
</p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>FIRST NAME</th>
      <th>LAST NAME</th>
      <th>EMAIL</th>
      <th>ROLE</th>
      <th class="table-width">OPERATIONS</th>
    </tr>
  </thead>
  <tbody id="users-tbody">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user_path(user) %>
          <%= link_to 'Edit', edit_user_path(user), class: "set-padding" %>
          <%= link_to 'Destroy', user_path(user), class: "set-padding",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination">
<ul>
  <li> <%= paginate @users, :window => 2 %></li>
</ul>
</div>
